@model IEnumerable<PoolIt.Web.Areas.Administration.Models.UserAdminListingModel>

@{
    ViewData["Title"] = "Users";
}

<table class="table table-hover mt-3 dt-responsive dataTable nowrap">
    <thead>
    <tr class="font-weight-bold">
        <th>First name</th>
        <th>Last name</th>
        <th>Admin</th>
        <th>Cars</th>
        <th>Organised rides</th>
        <th>Rides participating in</th>
        <th>Sent join requests</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr class="@(user.IsAdmin ? "font-weight-bold" : "")">
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@(user.IsAdmin ? "Yes" : "No")</td>
            <td>@user.CarCount</td>
            <td>@user.OrganisedRideCount</td>
            <td>@user.ParticipatingRideCount</td>
            <td>@user.SentRequestCount</td>
            <td>@user.Email</td>
            <td>
                <button class="btn btn-outline-primary" data-toggle="modal"
                        data-target="#resetPasswordModal" data-id="@user.Id" data-name="@($"{user.FirstName} {user.LastName}")">
                    <i class="fas fa-unlock"></i> Reset password
                </button>
                @if (user.IsAdmin)
                {
                    <button class="btn btn-outline-danger" data-toggle="modal"
                            data-target="#demoteModal" data-id="@user.Id" data-name="@($"{user.FirstName} {user.LastName}")">
                        <i class="fas fa-chevron-down"></i> Demote
                    </button>
                }
                else
                {
                    <button class="btn btn-outline-success" data-toggle="modal"
                            data-target="#promoteModal" data-id="@user.Id" data-name="@($"{user.FirstName} {user.LastName}")">
                        <i class="fas fa-chevron-up"></i> Promote
                    </button>
                }
                <button class="btn btn-outline-danger" data-toggle="modal"
                        data-target="#deleteAccountModal" data-id="@user.Id" data-email="@user.Email"
                        data-name="@($"{user.FirstName} {user.LastName}")">
                    <i class="fas fa-trash"></i> Delete account
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="modal fade" id="promoteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Cancel</button>

                <form asp-action="Promote" asp-controller="Users" method="post">
                    <input type="hidden" name="id">
                    <button type="submit" class="btn btn-success">Promote</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="demoteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Cancel</button>

                <form asp-action="Demote" asp-controller="Users" method="post">
                    <input type="hidden" name="id">
                    <button type="submit" class="btn btn-danger">Demote</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reset password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Cancel</button>

                @Html.AntiForgeryToken()
                <input type="hidden" id="resetPasswordUserId">
                <button id="resetPasswordBtn" class="btn btn-outline-primary">Reset password</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="resetPasswordSuccessModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Password reset successfully</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary ml-auto" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteAccountModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="Users" asp-action="DeleteAccount" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Delete user account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="deleteAccountText"></p>
                    <p>Type the user's email and your password to confirm deletion</p>

                    <div class="form-group">
                        <label id="deleteAccountEmailLabel"></label>
                        <input id="deleteAccountEmail" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Your password</label>
                        <input type="password" name="password" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal">Cancel</button>
                    <input type="hidden" name="id">
                    <button type="submit" class="btn btn-danger" id="deleteAccountButton">
                        <i class="fas fa-trash"></i> Delete account
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#promoteModal').on('show.bs.modal',
            function(event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var name = button.data('name');
                var modal = $(this);
                modal.find('.modal-title').text('Promote ' + name);
                modal.find('.modal-body').text('Are you sure you would like to promote the user ' +
                    name +
                    ' to Administrator? This will give them unrestricted control over the website.');
                modal.find('.modal-footer input[name=id]').val(id);
            }
        );

        $('#demoteModal').on('show.bs.modal',
            function(event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var name = button.data('name');
                var modal = $(this);
                modal.find('.modal-title').text('Demote ' + name);
                modal.find('.modal-body')
                    .text('Are you sure you would like to demote the user ' + name + ' to a regular user?');
                modal.find('.modal-footer input[name=id]').val(id);
            }
        );

        $('#resetPasswordModal').on('show.bs.modal',
            function(event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var name = button.data('name');
                var modal = $(this);
                modal.find('.modal-body')
                    .text('Are you sure you would like to reset ' + name + '\'s password?');
                $('#resetPasswordUserId').val(id);
            }
        );

        $('#resetPasswordBtn').click(
            function() {
                $('#resetPasswordModal').modal('hide');
                $.ajax({
                    url: '@Url.Action("ResetPassword", "Users")',
                    type: "POST",
                    data: {
                        id: $('#resetPasswordUserId').val(),
                        __RequestVerificationToken:
                            $('#resetPasswordModal input[name=__RequestVerificationToken]').val()
                    },
                    success: function(result) {
                        var modal = $('#resetPasswordSuccessModal');
                        modal.find('.modal-body').text(result.name + '\'s password was reset to ' + result.newPassword);
                        modal.modal('show');
                    }
                });
            }
        );

        $('#deleteAccountModal').on('show.bs.modal',
            function(event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');
                var name = button.data('name');
                var email = button.data('email');
                var modal = $(this);
                modal.find('#deleteAccountText')
                    .text('Are you sure you would like to delete ' + name + '\'s account?');
                modal.find('#deleteAccountEmailLabel').text(email);
                modal.find('#deleteAccountEmail').val('');
                modal.find('#deleteAccountButton').prop('disabled', true);

                modal.find('input[name=password]').val('');
                modal.find('.modal-footer input[name=id]').val(id);
            }
        );

        $('#deleteAccountEmail').change(function() {
            var currentValue = $(this).val();
            var userEmail = $('#deleteAccountEmailLabel').text();

            $('#deleteAccountButton').prop('disabled', currentValue !== userEmail);
        });
    </script>
}