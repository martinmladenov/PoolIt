<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/css/reset.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    @RenderSection("CustomCss", required: false)

    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/conversation.css">

    <title>@ViewData["Title"] - PoolIt</title>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-translucent fixed-top shadow-sm">
    <div class="container-fluid mx-md-5">
        <a class="navbar-brand text-primary mr-auto" href="/">
            <i class="fas fa-less-than"></i>
            <span class="d-none d-md-inline">PoolIt</span>
        </a>
        @{
            var rideTitle = ViewData["RideTitle"];
            var rideId = ViewData["RideId"];
        }
        @if (rideTitle != null && rideId != null)
        {
            <span class="navbar-brand mx-auto">
                @rideTitle
            </span>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn btn-outline-primary" asp-area="Rides"
                       asp-controller="Rides" asp-action="Details" asp-route-id="@rideId">
                        View ride
                    </a>
                </li>
            </ul>
        }
    </div>
</nav>

<partial name="_CookieConsentPartial"/>

<main>
    @RenderBody()
</main>

<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/moment.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/bootstrap-select.min.js"></script>

<partial name="_ValidationScriptsPartial"/>

@RenderSection("Scripts", required: false)
</body>
</html>