@model JoinRequestCreateBindingModel

@{
    ViewData["Title"] = "Join " + Model.RideTitle;
}

<div class="text-center w-50 mx-auto my-4">
    <h2>@ViewData["Title"]</h2>
    <form method="post">
        <hr/>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Message"></label>
            <textarea class="form-control" asp-for="Message"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-between">
            <a class="btn btn-secondary" asp-controller="Rides" asp-action="Details" asp-route-id="@Model.RideId">Back</a>
            <button type="submit" class="btn btn-primary">Send join request</button>
        </div>
    </form>
</div>